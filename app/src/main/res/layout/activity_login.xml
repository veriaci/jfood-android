<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Basil"
    android:background="@color/basilBackground">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login JFood"
        android:textAllCaps="false"
        android:textSize="46sp"
        android:textColor="@color/basilSecondary800"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat_bold"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/et_password_login"
        android:padding="10dp"
        android:ems="10"
        android:textColor="@color/basilPrimary500"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/lekton_bold"
        tools:text="Email" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/btnLogin"
        android:padding="10dp"
        android:ems="10"
        android:textColor="@color/basilPrimary500"
        android:fontFamily="@font/lekton_bold"
        android:hint="Enter Password"
        android:inputType="textPassword"
        tools:text="Password" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:clickable="true"
        app:elevation="4dp"
        android:background="@drawable/button_accept"
        android:foreground="?selectableItemBackgroundBorderless"
        android:fontFamily="@font/montserrat_medium"
        android:text="L O G I N"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Register Now"/>

</LinearLayout>