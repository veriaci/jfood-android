<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PromoActivity"
    android:orientation="vertical"
    android:theme="@style/Basil"
    android:background="@color/basilBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/staticPromoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo ID:"
            android:fontFamily="@font/lekton_regular"
            android:ems="10"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvPromoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/lekton_bold"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/staticPromoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo Code:"
            android:fontFamily="@font/lekton_regular"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvPromoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/lekton_bold"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/staticPromoDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount:"
            android:fontFamily="@font/lekton_regular"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvPromoDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/lekton_bold"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/staticMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Price:"
            android:fontFamily="@font/lekton_regular"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvPromoMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/lekton_bold"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/staticPromoActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Status:"
            android:fontFamily="@font/lekton_regular"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvPromoActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/lekton_bold"
            android:textAlignment="viewEnd"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/basilPrimary100"/>

</LinearLayout>