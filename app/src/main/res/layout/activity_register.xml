<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity"
    android:theme="@style/Basil"
    android:background="@color/basilBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Register JFood"
        android:textAllCaps="false"
        android:textSize="46sp"
        android:textColor="@color/basilSecondary800"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_semi_bold"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/et_password_login"
        android:padding="10dp"
        android:ems="10"
        android:textColor="@color/basilPrimary500"
        android:fontFamily="@font/lekton_bold"
        android:hint="Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/et_password_login"
        android:padding="10dp"
        android:ems="10"
        android:textColor="@color/basilPrimary500"
        android:fontFamily="@font/lekton_bold"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="10sp"
        android:layout_above="@+id/et_password_login"
        android:padding="10dp"
        android:ems="10"
        android:textColor="@color/basilPrimary500"
        android:fontFamily="@font/lekton_bold"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:clickable="true"
        app:elevation="4dp"
        android:background="@drawable/button_accept"
        android:foreground="?selectableItemBackgroundBorderless"
        android:fontFamily="@font/montserrat_medium"
        android:text="R E G I S T E R"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Login" />

</LinearLayout>