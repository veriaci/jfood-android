<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderActivity"
    android:orientation="vertical"
    android:theme="@style/Basil"
    android:background="@color/basilBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/staticFoodName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lekton_regular"
            android:text="Food Name:"/>
        <TextView
            android:id="@+id/tvOrderName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/lekton_bold"
            android:text="TextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/staticCategory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_regular"
            android:text="Category:"/>
        <TextView
            android:id="@+id/tvOrderCategory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/lekton_bold"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/staticPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_regular"
            android:text="Single Price:" />
        <TextView
            android:id="@+id/tvOrderPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/lekton_bold"
            android:text="TextView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/staticQuantity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_regular"
            android:text="Quantity:" />
        <TextView
            android:id="@+id/tvOrderQuantity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/lekton_bold"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/staticSubTotal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_regular"
            android:layout_marginBottom="3dp"
            android:text="SubTotal:" />
        <TextView
            android:id="@+id/tvOrderSubTotal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/lekton_bold"
            android:layout_marginBottom="3dp"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/basilPrimary100"/>
</LinearLayout>