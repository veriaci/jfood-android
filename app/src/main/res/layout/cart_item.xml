<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_cart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="6dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/basilBackground"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/img_view_cart"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_toEndOf="@+id/img_view_cart"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/tv_food_name_cart"
                    android:transitionName="example_transition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/basilPrimary500"
                    android:textSize="30dp"
                    android:fontFamily="@font/lekton_bold"
                    android:text="Makanan"
                    />
                <TextView
                    android:id="@+id/tv_food_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/basilPrimary800"
                    android:textSize="18dp"
                    android:fontFamily="@font/lekton_regular"
                    android:text="Rp. 39999"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_delete_item"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_remove_circle_outline_orange_24dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"/>
            <ImageButton
                android:id="@+id/btn_add_item"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add_circle_outline_basil_24dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/basilPrimary800"
                    android:textSize="15dp"
                    android:fontFamily="@font/lekton_regular"
                    android:text="Qty : "/>
                <TextView
                    android:id="@+id/tv_qty_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/basilPrimary800"
                    android:textSize="15dp"
                    android:fontFamily="@font/lekton_regular"
                    android:text="5 pcs"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>